<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lastDayInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/last_day_blocked"
        android:textColor="#000000"
        android:textSize="@dimen/text_small_size" />

    <TextView
        android:id="@+id/lastDayBlockedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/lastDayInfoTextView"
        android:layout_toRightOf="@+id/lastDayInfoTextView"
        android:textColor="#000000"
        android:textSize="@dimen/text_small_size"/>

    <ListView
        android:id="@+id/blockedDomainsListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lastDayBlockedTextView"
        android:scrollbars="vertical" />

</RelativeLayout>