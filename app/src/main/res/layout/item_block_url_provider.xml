<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/blockUrlProviderTextView"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:focusable="false"
        android:lines="1"
        android:singleLine="true"
        android:text="@string/adaway_hosts"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/blockUrlCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blockUrlProviderTextView"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:lines="1"
        android:singleLine="true"
        android:text="@string/_2597" />

    <CheckBox
        android:id="@+id/urlProviderCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:scaleX="1.50"
        android:scaleY="1.50" />

    <ImageView
        android:id="@+id/deleteUrlProviderImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/urlProviderCheckBox"
        android:layout_toStartOf="@+id/urlProviderCheckBox"
        android:contentDescription="@string/delete_url"
        android:scaleX="1.50"
        android:scaleY="1.50"
        android:src="@drawable/ic_delete_grey600_24dp" />

    <TextView
        android:id="@+id/lastUpdatedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/urlProviderCheckBox"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="@string/_2017_06_30_16_00_00" />

</RelativeLayout>